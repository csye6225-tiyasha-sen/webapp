[Unit]
Description=CSYE 6225 Application
After=network.target

[Service]
Type=simple
User=tiyashasen_net
Group=tiyashasen_net
WorkingDirectory=/home/tiyashasen_net/
ExecStart=/home/tiyashasen_net/.nvm/versions/node/v21.6.1/bin/node /home/tiyashasen_net/webapp/index.js
